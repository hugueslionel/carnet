<body>
    <div class="container">
        <h1 id="studentName">Nom de l'élève</h1>
        <a href="index.html" class="back-button">Retour à la liste</a>
    </div>

    <script>
        // Récupérer le nom de l'élève depuis l'URL
        const urlParams = new URLSearchParams(window.location.search);
        const studentName = urlParams.get('name');

        // Afficher le nom de l'élève dans la page
        if (studentName) {
            document.getElementById('studentName').textContent = studentName;
        } else {
            document.getElementById('studentName').textContent = "Nom de l'élève inconnu";
        }
    </script>
</body>
</html>
